{
  "manifest_version": 3,
  "name": "Disable Page Visibility",
  "version": "1.2.3",
  "author": "Thomas Hoang",
  "description": "Stops websites from detecting when you switch tabs or minimize the window.",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "host_permissions": ["http://*/*", "https://*/*"],
  "permissions": ["tabs", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/off-16.png",
      "32": "icons/off-32.png"
    },
    "default_title": "Page Visibility: OFF"
  },
  "homepage_url": "https://dpv.thomashoang.dev/",
  "background": {
    "service_worker": "background.js"
  }
}
